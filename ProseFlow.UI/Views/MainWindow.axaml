<shadui:Window
    x:Class="ProseFlow.UI.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
    xmlns:vm="using:ProseFlow.UI.ViewModels"
    xmlns:models="clr-namespace:ProseFlow.Core.Models;assembly=ProseFlow.Core"
    xmlns:downloads="clr-namespace:ProseFlow.UI.Views.Downloads"
    xmlns:about="clr-namespace:ProseFlow.UI.ViewModels.About"
    xmlns:icons="clr-namespace:ProseFlow.UI.Controls.Icons"
    x:DataType="vm:MainViewModel"
    mc:Ignorable="d"
    d:DesignWidth="1920"
    d:DesignHeight="1080"

    Title="ProseFlow"
    Icon="/Assets/logo.ico"
    Width="1920" Height="1080"
    MinWidth="960" MinHeight="740"
    WindowStartupLocation="CenterScreen"

    TitleFontWeight="SemiBold"
    SaveWindowState="True">

    <Window.Styles>
        <Style Selector="shadui|SidebarItem">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.15" Easing="CubicEaseOut" />
                    <BrushTransition Property="Foreground" Duration="0.15" Easing="CubicEaseOut" />
                    <BrushTransition Property="BorderBrush" Duration="0.15" Easing="CubicEaseOut" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="shadui|SidebarItem:checked">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}" />
            <Setter Property="BorderThickness" Value="3,0,0,0" />
            <Setter Property="Background" Value="{DynamicResource GhostColor}" />
        </Style>
    </Window.Styles>

    <shadui:Window.LogoContent>
        <PathIcon
            Width="14"
            Height="14"
            Margin="8,8,0,8"
            Data="{Binding ., Converter={StaticResource StringToIconConverter}, ConverterParameter=Logo}">
            <PathIcon.Styles>
                <Style Selector="Path">
                    <Setter Property="Stroke"
                            Value="{DynamicResource PrimaryColor}" />
                    <Setter Property="StrokeThickness" Value="1" />
                </Style>
            </PathIcon.Styles>
        </PathIcon>
    </shadui:Window.LogoContent>

    <shadui:Window.Hosts>
        <shadui:DialogHost Manager="{Binding DialogManager}"
                           Owner="{Binding RelativeSource={RelativeSource AncestorType=shadui:Window}}" />
    </shadui:Window.Hosts>

    <!-- Theme switcher -->
    <shadui:Window.RightWindowTitleBarContent>
        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button
                Width="30"
                Height="30"
                Background="{DynamicResource SidebarBackgroundColor}"
                Command="{Binding SwitchThemeCommand}"
                CornerRadius="{DynamicResource MdCornerRadius}"
                ToolTip.Tip="Switch Theme">
                <icons:SymbolIcon Size="18" Symbol="Moon" />
            </Button>
        </StackPanel>
    </shadui:Window.RightWindowTitleBarContent>

    <Panel>
        <Grid ColumnDefinitions="Auto, *">
            <!-- Collapsible Sidebar for Navigation -->
            <shadui:Sidebar
                Grid.Column="0"
                Width="220"
                MinWidth="60"
                BorderBrush="{DynamicResource BorderColor30}"
                BorderThickness="0,0,1,0"
                Expanded="{Binding #Toggler.IsChecked, Mode=OneWay}">

                <shadui:Sidebar.Header>
                    <DockPanel Height="48" Margin="0,4">
                        <PathIcon
                            Margin="16,0"
                            IsVisible="{Binding #Toggler.IsChecked, Converter={x:Static BoolConverters.Not}}"
                            Width="24" Height="24"
                            Data="{Binding ., Converter={StaticResource StringToIconConverter}, ConverterParameter=Logo}"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                            <PathIcon.Styles>
                                <Style Selector="Path">
                                    <Setter Property="Stroke"
                                            Value="{DynamicResource PrimaryColor}" />
                                    <Setter Property="StrokeThickness" Value="1" />
                                </Style>
                            </PathIcon.Styles>
                        </PathIcon>

                        <StackPanel
                            Spacing="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            IsVisible="{Binding #Toggler.IsChecked}">
                            <PathIcon
                                Margin="16,0"
                                Width="24" Height="24"
                                Data="{Binding ., Converter={StaticResource StringToIconConverter}, ConverterParameter=Logo}"
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                                <PathIcon.Styles>
                                    <Style Selector="Path">
                                        <Setter Property="Stroke"
                                                Value="{DynamicResource PrimaryColor}" />
                                        <Setter Property="StrokeThickness" Value="1" />
                                    </Style>
                                </PathIcon.Styles>
                            </PathIcon>
                            <TextBlock
                                Classes="h3"
                                Text="Prose"
                                FontFamily="{StaticResource JetbrainsFont}" />
                            <TextBlock
                                Classes="h3"
                                Text="Flow"
                                Foreground="{DynamicResource PrimaryColor}"
                                FontFamily="{StaticResource JetbrainsFont}" />
                        </StackPanel>
                    </DockPanel>
                </shadui:Sidebar.Header>

                <!-- Navigation Items -->
                <ItemsControl ItemsSource="{Binding PageViewModels}" Margin="8,16">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <shadui:SidebarItem
                                Content="{Binding Title}"
                                IsChecked="{Binding IsSelected}"
                                Command="{Binding $parent[Window].((vm:MainViewModel)DataContext).NavigateCommand, FallbackValue={x:Null}}"
                                CommandParameter="{Binding .}">

                                <shadui:SidebarItem.Icon>
                                    <Viewbox>
                                        
                                        <PathIcon Width="20" Height="20" Foreground="{x:Null}"
                                                  Data="{Binding Icon, Converter={StaticResource StringToIconConverter}}">
                                            <PathIcon.Styles>
                                                <Style Selector="Path">
                                                    <Setter Property="Stroke" Value="{DynamicResource PrimaryColor}" />
                                                    <Setter Property="StrokeThickness" Value="1" />
                                                </Style>
                                            </PathIcon.Styles>
                                        </PathIcon>
                                    </Viewbox>
                                </shadui:SidebarItem.Icon>
                            </shadui:SidebarItem>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <shadui:Sidebar.Footer>
                    <StackPanel Spacing="8" Margin="0,0,0,16">
                        <!-- App version number -->
                        <TextBlock Text="{x:Static models:Constants.AppVersion}"
                                   Classes="Small Muted"
                                   HorizontalAlignment="Center"
                                   IsVisible="{Binding #Toggler.IsChecked}" />

                        <!-- Downloads Button/Popup -->
                        <Button Name="DownloadsButton"
                                HorizontalAlignment="Left"
                                Padding="8,0" Margin="14,0,0,0"
                                IsVisible="{Binding HasActiveDownloads}">
                            <Button.Flyout>
                                <Flyout Placement="RightEdgeAlignedTop">
                                    <downloads:DownloadsPopupView DataContext="{Binding DownloadsPopup}" Width="450" />
                                </Flyout>
                            </Button.Flyout>
                            <Grid>
                                <icons:SymbolIcon Size="18" Symbol="Download" />
                                <TextBlock Text="{Binding ActiveDownloadCount}" VerticalAlignment="Top"
                                           HorizontalAlignment="Right" Margin="0,0,0,24" />
                            </Grid>
                        </Button>

                        <!-- Toggle button to expand/collapse the sidebar -->
                        <ToggleButton
                            Name="Toggler"
                            HorizontalAlignment="Left"
                            Width="32" Height="32"
                            Padding="8"
                            Margin="14,0,0,0"
                            CornerRadius="{DynamicResource LgCornerRadius}"
                            Theme="{DynamicResource SideTogglerTheme}">
                            <Viewbox>
                                <icons:SymbolIcon Size="24" Symbol="Menu" />
                            </Viewbox>
                        </ToggleButton>
                    </StackPanel>
                </shadui:Sidebar.Footer>
            </shadui:Sidebar>

            <!-- Main Content Area with smooth transitions -->
            <TransitioningContentControl
                Grid.Column="1"
                Content="{Binding CurrentPage}" />
        </Grid>

        <!-- Toast Notification Host -->
        <shadui:ToastHost Manager="{Binding ToastManager}" />
    </Panel>
</shadui:Window>